<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" 
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<!-- 车Action -->
	<package name="car" namespace="/admin/car" extends="struts-default,json-default">
		<action name="*Car" class="com.rent.web.action.admin.CarAction" method="{1}">
			<!--json 数据-->
            <result type="json" name="jsonReturn">
                <param name="root">jsonData</param>
            </result>
            <!-- 查看已有车辆信息 -->
            <result name="query">/admin/car/query.jsp</result>
            <!-- 转到车辆信息修改页 -->
            <result name="intoAdd">/admin/car/add.jsp</result>
            <!-- 转到车辆信息更新页 -->
            <result>/admin/car/update.jsp</result>
		</action>
	</package>
	
	<!-- 管理员Action -->
	<package name="manager" namespace="/admin/manager" extends="struts-default,json-default">
		<action name="*Manager" class="com.rent.web.action.admin.ManagerAction" method="{1}">
			<!--json 数据-->
            <result type="json" name="jsonReturn">
                <param name="root">jsonData</param>
            </result>
		</action>
	</package>
	
	<!-- 图片Action -->
	<package name="picture" namespace="/admin/picture" extends="struts-default,json-default">
		<action name="*Picture" class="com.rent.web.action.admin.PictureAction" method="{1}">
			<!--json 数据-->
            <result type="json" name="jsonReturn">
                <param name="root">jsonData</param>
            </result>
		</action>
	</package>
	
	<!-- 租车信息Action -->
	<package name="rentInfo" namespace="/admin/rentInfo" extends="struts-default,json-default">
		<action name="*Rent" class="com.rent.web.action.admin.RentInfoAction" method="{1}">
			<!--json 数据-->
            <result type="json" name="jsonReturn">
                <param name="root">jsonData</param>
            </result>
            <!-- 根据出租的初始时间查询出租表 -->
            <result name="query">/admin/rentInfo/query.jsp</result>
		</action>
	</package>
	
	<!-- 角色Action -->
	<package name="role" namespace="/admin/role" extends="struts-default,json-default">
		<action name="*Role" class="com.rent.web.action.admin.RoleAction" method="{1}">
			<!--json 数据-->
            <result type="json" name="jsonReturn">
                <param name="root">jsonData</param>
            </result>
            <!-- 跳到角色修改页面 -->
            <result>/admin/role/update.jsp</result>
		</action>
	</package>
	
	<!-- 用户Action -->
	<package name="user" namespace="/admin/user" extends="struts-default,json-default">
		<action name="*User" class="com.rent.web.action.admin.UserAction" method="{1}">
			<!--json 数据-->
            <result type="json" name="jsonReturn">
                <param name="root">jsonData</param>
            </result>
            <!-- 查看用户的信息 -->
            <result name="query">/admin/user/query.jsp</result>
            <!-- 根据角色查询用户信息 -->
            <result name="queryByRole">/admin/user/query.jsp</result>
		</action>
	</package>
</struts>    
